      include ../static/style.css
      include ../static/stylecontact.css
block content
    div.container
      h1 Contact Us
        form(action="/contact",method="post" class="myForm")
          input(type="text", class="myInput", name="name", placeholder="Enter tour name")
          input(type="phhone", class="myInput", name="phone", placeholder="Enter tour phone")
          input(type="email", class="myInput", name="email", placeholder="Enter tour email")
          input(type="text", class="myInput", name="address", placeholder="Enter tour address")
          input(type="text", class="myInput", name="desc", placeholder="Enter tour concern")
          button(class="btn")
            | Submit   